{
  "name": "hugo-theme-boilerplate",
  "version": "0.1.0",
  "description": "This repository contains project setup boilerplate for a Webpack based project\r that builds a Hugo theme.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-s build:webpack build:hugo",
    "build:hugo": "hugo -s demo -d ../dist/demo --themesDir ../dist",
    "build:webpack": "webpack",
    "dev": "run-s build:webpack dev:start",
    "dev:start": "run-p dev:webpack dev:hugo",
    "dev:hugo": "hugo serve -s demo -d ../dist/demo --themesDir ../dist -vw",
    "dev:webpack": "webpack -w"
  },
  "author": "Lior Kummer",
  "license": "GPL-3.0",
  "devDependencies": {
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "hugo-bin": "^0.52.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.14.2",
    "stylelint-webpack-plugin": "^1.2.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
